<section class="container">

  <h2>Log in</h2>

    <hr>

  <form ="/login" method="post">

    <div>
      <label for="username">Username :</label>
      <input type="text" id="username" name="username" placeholder="Your cool surname">
    </div>

    <div>
      <label for="password">Password :</label>
      <input type="password" id="password" name="password" placeholder="Your secret code">
    </div>

    <button>Log in</button>

  </form>

  <div class="error-msg">
    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </div>

    <hr>

  <div>
    <p>Not one of us yet ?</p>
    <a href="/signup">Come here !</a>
  </div>

</section>